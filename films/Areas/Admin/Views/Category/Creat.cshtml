@model Category
<h1>Add a category</h1>
<form class="form-control" method="post">
	<label asp-for="@Model.Name"></label>
	<input asp-for="@Model.Name" />
	<span asp-validation-for="@Model.Name" class="text-danger"></span>
	<label asp-for="@Model.Description"></label>
	<input asp-for="@Model.Description" />
	<span asp-validation-for="@Model.Description" class="text-danger"></span>
	<label asp-for="@Model.abb"></label>
	<input asp-for="@Model.abb" />
	<span asp-validation-for="@Model.abb" class="text-danger"></span>
	<button type="submit" class="btn btn-dark bg-dark">submit</button>
	<a class="btn btn-secondary" asp-controller="Category" asp-action="Index">back to Categories</a>
</form>
<script>
	const inputField = document.getElementById("abb");

	inputField.addEventListener("change", function (event) {
		event.preventDefault();
		inputField.value = inputField.value.toUpperCase();
	});
</script>