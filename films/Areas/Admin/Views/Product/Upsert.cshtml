@model Product
@{
	var cats = ViewBag.cats;
}
<h1> Creat new product</h1>
<div class="col-7">
	<form class="form-control" method="post" enctype="multipart/form-data">

		<label asp-for="@Model.Name"></label>
		<input asp-for="@Model.Name" /><br />
		<span asp-validation-for="@Model.Name" class="alert-danger"></span><br />
		<label asp-for="@Model.Description"></label>
		<input asp-for="@Model.Description" /><br />
		<span asp-validation-for="@Model.Description" class="alert-danger"></span><br />
		<label asp-for="@Model.Author"></label>
		<input asp-for="@Model.Author" /><br />
		<span asp-validation-for="@Model.Author" class="alert-danger"></span><br />
		<label asp-for="@Model.Price"></label>
		<input asp-for="@Model.Price" /><br />
		<span asp-validation-for="@Model.Price" class="alert-danger"></span><br />
		<label asp-for="@Model.CategoryId">chose a category</label>
		<select asp-for="@Model.CategoryId">
			<option disabled selected value="">--chose a category--</option>
			@{
				foreach (KeyValuePair<int, string> entry in cats)
				{
					<option value="@entry.Key">@entry.Value</option>
				}
			}
		</select>
		<span asp-validation-for="@Model.CategoryId" class="alert-danger"></span><br />
		<label asp-for="@Model.imgURL"></label>
		<input type="file" name="file" id="file" />

		<button type="submit" class="btn btn-dark bg-dark" id="submit">submit</button>
		<a class="btn btn-secondary" asp-area="Admin" asp-controller="Product" asp-action="Index">back to Categories</a>

	</form>
</div>
<div class="col-3">
	@{
		if (Model != null)
		{
			<img src="@Model.imgURL" class="img-thumbnail" />
		}

	}
</div>